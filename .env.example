# Flask Environment (development, production, testing)
FLASK_ENV=development

# Secret key for session encryption (generate a secure key for production)
# Run: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here

# Database URL
# For SQLite (default): sqlite:///ruff.db
# For PostgreSQL: postgresql://username:password@localhost/ruff
# For MySQL: mysql+pymysql://username:password@localhost/ruff
DATABASE_URL=sqlite:///ruff.db

# Flask Debug Mode
FLASK_DEBUG=1
